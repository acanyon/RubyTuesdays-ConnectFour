- model_class = Game
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
  = link_to t('.new', :default => t("helpers.links.new")), games_path, :class => 'btn btn-primary', :method => :post

%h2 All Games
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:next_player)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @games.each do |game|
      %tr
        %td= link_to game.id, game_path(game)
        -# labeled as next player, but the current player is the player who should be taking the next turn
        -# it makes more sense (to me) to display the player who is placing the next piece
        %td= game.current_player
        %td=l game.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_game_path(game), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), game_path(game), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'


